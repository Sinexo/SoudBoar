<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Llayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    android:orientation="vertical"
    android:padding="16dp" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/soundboar_logo"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_row="0"
            android:contentDescription="@string/logo_soundboar" />

        <ImageButton
            android:id="@+id/addSoundButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_add"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_row="1"
            android:layout_gravity="right"
            android:contentDescription="@string/logo_add"
            tools:ignore="RtlHardcoded" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3">

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/bouton_1" />
        <!-- Bouton 2 -->
        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/bouton_2" />

        <!-- Bouton 3 -->
        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/bouton_3" />

        <Button
            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/bouton_4" />

    </GridLayout>
</LinearLayout>